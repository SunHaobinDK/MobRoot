<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="@dimen/advanced_window_app_item_app_icon_width"
            android:layout_height="@dimen/advanced_window_app_item_app_icon_height"
            android:src="@color/image_default_bg" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/advanced_window_app_item_app_title_margin_top"
            android:textColor="#404040"
            android:singleLine="true"
            android:textSize="@dimen/advanced_window_app_item_app_title_text_size" />

        <TextView
            android:id="@+id/appCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b5b5b5"
            android:textSize="@dimen/advanced_window_app_item_app_category_text_size" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/smallRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/advanced_window_app_item_rating_bar_margin_top"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5" />
    </LinearLayout>

</LinearLayout>